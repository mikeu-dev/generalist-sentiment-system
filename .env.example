# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# Database
DATABASE_URL=sqlite:///sentiment.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Data Source Configuration

# DuckDuckGo (Default - always enabled)
# No configuration needed

# Twitter/X Configuration
TWITTER_ENABLED=true
TWITTER_RATE_LIMIT=15
TWITTER_TIMEOUT=30

# Reddit Configuration (Requires API Credentials)
# Get credentials from: https://www.reddit.com/prefs/apps
REDDIT_ENABLED=false
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=SentimentAnalysisBot/1.0

# YouTube Configuration
YOUTUBE_ENABLED=true
YOUTUBE_RATE_LIMIT=10
YOUTUBE_TIMEOUT=30

# Indonesian News Configuration
NEWS_INDONESIA_ENABLED=true
NEWS_INDONESIA_TIMEOUT=20
NEWS_INDONESIA_RATE_LIMIT=5
